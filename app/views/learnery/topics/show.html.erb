<%- model_class = Learnery::Topic -%>

<p id="notice"><%= notice %></p>

<dl class="dl-horizontal">
<dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt> <dd><%= @topic.name %></dd>
<dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt> <dd><%= @topic.description.presence || t('topics.empty_description') %></dd>
<dt><strong><%= model_class.human_attribute_name(:event) %>:</strong></dt> <dd><%= @topic.event_name.presence || t('topics.empty_event')  %></dd>
<dt><strong><%= model_class.human_attribute_name(:suggested_by) %>:</strong></dt> <dd><%= @topic.suggested_by.name %></dd>
<dt><strong><%= model_class.human_attribute_name(:presented_by) %>:</strong></dt> <dd><%= @topic.presented_by_name.presence  || t('topics.empty_presented') %></dd>
</dl>

