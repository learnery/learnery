<%= horizontal_form_for @event do |f| %>
   <%= f.text_field :name %>
   <%= f.select(:rsvp_type, options_for_select( rsvp_type_options, @event.rsvp_type ) ) %>
   <%= f.text_field :starts %>
   <%= f.text_field :ends %>
   <%= f.text_field :max_attendees, :help => t(:max_attendees_zero_is_unlimited)  %>
   <%= f.text_area :description %>
   <%= f.text_area :venue %>
   <%= f.submit nil %>
<% end %>
