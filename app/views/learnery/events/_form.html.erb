<%= model_errors( @event ) %>
<%= horizontal_form_for @event do |f| %>
   <%= f.text_field :name %>
   <%= f.select(:type, options_for_select( event_type_options, @event.type ) ) %>
   <%= f.text_field :starts %>
   <%= f.text_field :ends %>
   <%= f.text_area :description %>
   <%= f.text_area :venue %>

   <div class="subform">
     <div class="alert">
     <%= t :only_some_fields_are_relevant %>
     Achtung: je nach Art der Anmeldung gelten die folgenden Felder - oder sie werden ignoriert!
     </div>
   </div>
   <% Learnery::Event.implementations.each do |subclass| %>
     <div class="subform <%= subclass.to_s.split('::').last %>">
         <%= render(:partial => subclass.to_s.split('::').last.underscore, :locals => { :f => f }) %>
     </div>
   <% end %>
   <%= f.submit nil %>
 <% end %>
